<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idCVProduct"
    android:layout_width="160dp"
    android:layout_height="247dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="24dp"
    android:clickable="true"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idRLProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00B3B3B3"
        android:elevation="0dp">

        <ImageButton
            android:id="@+id/idIBHProduct"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etvHProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:text="Name"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etvProductPrice2"
            app:layout_constraintTop_toBottomOf="@+id/etvHProductPrice" />

        <TextView
            android:id="@+id/etvHProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etvHProductName"
            android:layout_alignEnd="@+id/etvHProductName"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/etvProductPrice2"
            app:layout_constraintStart_toEndOf="@+id/etvProductPrice2" />

        <TextView
            android:id="@+id/etvProductPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etvHProductName"
            android:layout_alignEnd="@+id/etvHProductName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Rs."
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idIBHProduct" />

        <TextView
            android:id="@+id/etvProductPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etvHProductName"
            android:layout_alignEnd="@+id/etvHProductName"
            android:text=".00"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/etvHProductPrice"
            app:layout_constraintStart_toEndOf="@+id/etvHProductPrice" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="#00535353"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idIBHProduct"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idCVCollection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="23dp"
    android:elevation="8dp"
    android:clickable="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/idRLCollection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3B3B3">

        <ImageButton
            android:id="@+id/idIBCollection"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/etvCollectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/idEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etvCollectionName"
            android:layout_alignStart="@+id/etvCollectionName"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:text="Edit"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>